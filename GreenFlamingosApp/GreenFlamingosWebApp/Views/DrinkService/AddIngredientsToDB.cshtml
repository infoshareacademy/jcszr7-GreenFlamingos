@model GreenFlamingos.Model.Drinks.Ingredient

@{
    ViewData["Title"] = "Dodaj Składniki do bazy";
    Layout = "~/Views/Shared/_LayoutOLD.cshtml";
}

<div style="text-align:center">
    <h4>Add ingredients to the database</h4>
</div>
<head margin-bottom:30px;>
    <script src="~/js/GreenFlamingosScripts.js"></script>
</head>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddIngredientToDB">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div id="divCont6">
                    <div><input type="text" style="width:90%" name="IngredientsToAdd" /><input type="button" style="width:8%; background-color:green; height:38px; border: 1px solid #ced4da; border-radius: 0.25rem;" onclick="AddTextBox6()" value="+" /></div>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
