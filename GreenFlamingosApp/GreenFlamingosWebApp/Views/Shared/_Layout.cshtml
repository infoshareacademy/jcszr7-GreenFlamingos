    <!-- ##### Best Receipe Area Start ##### -->
    <section class="best-receipe-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading">
                        <h3>Najwyżej Oceniane Drinki</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Single Best Receipe Area -->
                @foreach (var drink in topRated)
                {
                    solidStars = 0;
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="single-best-receipe-area mb-30">
                            <img src="@drink.Key.ImageUrl" class="img-thumbnail" style="width:500px;height:300px; justify-content:center" />
                            <div class="card-body">
                                <h3 class="card-title" style="margin-top:0px;text-align:center;">@Html.ActionLink(drink.Key.Name, "Details","Drink", new {  id=drink.Key.Id },new {@style="font-size:25px; color:green; text-decoration:none;"})</h3>
                                <div class="text-warning" style="height:20px; margin-bottom:20px;">
                                    @for (var i = 1; i <= @drink.Value; i++)
                                    {
                                        <span class="glyphicon glyphicon-star" style="margin-right:10px;"></span>
                                        solidStars++;
                                    }
                                    @for (var i = 0; i < (5 - solidStars); i++)
                                    {
                                        <span class="glyphicon glyphicon-star-empty" style="margin-right:10px;"></span>
                                    }
                                </div>
                                <div style="color:black; margin-bottom:20px; text-align:center;">
                                    <h7>Średnia ocena: @Math.Round(@drink.Value,1)</h7>
                                </div>
                                @if (userName == "Admin")
                                {
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            @Html.ActionLink("Usuń Drinka", "Delete","Drink", new {  id=drink.Key.Id }, new{ @class="btn btn-danger"})
                                        </div>
                                        <div>
                                            @Html.ActionLink("Edytuj", "Edit", "Drink", new {  id=drink.Key.Id },new{ @class="btn btn-secondary"})
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
    </section>
