                                            <li> @Html.ActionLink("Drinki z Rumem","GetDrinksByMainIngredient","DrinkService",new {mainIngredient = "Rum"})</li>
                                            <li> @Html.ActionLink("Drinki z Aperolem","GetDrinksByMainIngredient","DrinkService",new {mainIngredient = "Aperol"})</li>
                                            <li> @Html.ActionLink("Drinki z Malibu","GetDrinksByMainIngredient","DrinkService",new {mainIngredient = "Malibu"})</li>
