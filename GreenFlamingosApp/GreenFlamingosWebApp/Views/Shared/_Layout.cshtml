                        <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </form>

                    <!-- wczesniejsze pola w form action="#" method="post" -->
                </div>
            </div>
        </div>
    </div>

    <!-- ##### Header Area Start ##### -->
    <header class="header-area">

        <!-- Top Header Area -->
        <div class="top-header-area">
            <div class="container h-100">
                <div class="row h-100 align-items-center ">
                    <!-- Breaking News -->
                    <div class="col-12 col-sm-6">
                        <div class="breaking-news">
                            <div id="breakingNewsTicker" class="ticker">
                                <ul>
                                    <li><a href="#">Witamy w Aplikacji GreenFlamingos!</a></li>
                                    <li><a href="#">Najlepsze Drinki!</a></li>
                                    <li><a href="#">Najlepsze Shoty!</a></li>
                                    <li><a href="#">Najlepsze Koktajle!</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Top Social Info -->
                    <div class="col-12 col-sm-6">
                        <div class="top-social-info text-right">
                            @if (userName != null)
                            {
                                <a>Witaj @userName!</a>
                                <a asp-action="LogOut" asp-controller="UserAutentication">Wyloguj się</a>
                                @if (userName != "Admin")
                                {
                                    <a asp-action="UserDetails" asp-controller="UserAutentication">Dane konta</a>
                                }
                                else
                                {
                                    <a asp-action="GetAllUsers" asp-controller="UserAutentication">Lista Użytkowników</a>
                                    <a asp-action="AddIngredientsToDB" asp-controller="DrinkService">Dodaj Składnik do bazy</a>
                                }
                            }
                            else
                            {
                                <a asp-action="RegisterUser" asp-controller="UserAutentication">Zarejestruj się</a>
                                <a asp-action="Login" asp-controller="UserAutentication">Zaloguj się</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navbar Area -->
        <div class="delicious-main-menu">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <!-- Menu -->
                    <nav class="classy-navbar justify-content-center" id="deliciousNav">
                        <!-- Logo -->
                        <img src="~/img/core-img/logo_GreenFlamingos.png">
                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler">
                        </div>
                        <!-- Menu -->
                        <div class="classy-menu">
                            <!-- close btn -->
