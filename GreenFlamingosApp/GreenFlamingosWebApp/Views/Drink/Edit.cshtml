@model GreenFlamingos.Model.Drinks.Drink

@{
    ViewData["Title"] = "Edit drink";
    Layout = "~/Views/Shared/_LayoutOLD.cshtml";
    var preparations = @Model.Preparation.Split("\r\n").ToList();
}

<div style="text-align:center">
    <h4>Edytuj Drinka</h4>
</div>
<head>
    <script src="~/js/GreenFlamingosScripts.js"></script>
</head>
<div class="row">
    <div class="col-md-5">
        <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Drink">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" style="width:100%;" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="jakubSelect">
                <label asp-for="DrinkType" class="jakubSelect"></label>
                <select asp-for="DrinkType" class="jakubSelect" asp-items="new SelectList(ViewBag.DrinkType)"></select>
                <span asp-validation-for="DrinkType" class="text-danger"></span>
            </div>
            <div class="jakubSelect">
                <label asp-for="MainIngredient" class="jakubSelect"></label>
                <select asp-for="MainIngredient" class="jakubSelect" asp-items="new SelectList(ViewBag.MainIngredients)"></select>
                <span asp-validation-for="MainIngredient" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="Capacity" class="control-label"></label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AlcoholContent" class="control-label"></label>
                <input asp-for="AlcoholContent" style="width:100%" class="form-control" />
                <span asp-validation-for="AlcoholContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calories" class="control-label"></label>
                <input asp-for="Calories" class="form-control" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="DescriptionTextArea">
                    <textarea asp-for="Description"  style="height:150px"   class="DescriptionGreenFlamingos"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients" class="control-label"></label>
                <label class="control-label" style="margin-left:48%">Ilość</label>
                @foreach (var ingredient in Model.Ingredients)
                {
                    <div id="divCont">
                        <div><input type="text" name="Ingredients" value="@ingredient.Name" class="control-label" /><input type="text" value="@ingredient.Capacity" name="IngredientCapacity" style="width:29.5%" /><input type="button" style="width:8%; background-color:red; height:38px; border: 1px solid #ced4da; border-radius: 0.25rem;" onclick="RemoveTextBox(this)" value="-" /></div>
                    </div>
                }
                <div id="divCont1">
                    <div><input type="text" name="Ingredients" /><input type="text" name="IngredientCapacity" style="width:29.5%" /><input type="button" style="width:8%; background-color:green; height:38px; border: 1px solid #ced4da; border-radius: 0.25rem;" onclick="AddTextBox1()" value="+" /></div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Preparation" class="control-label"></label>
                @foreach (var preparation in preparations)
                {
                    <div id="divCont3">
                        <div><input type="text" style="width:90%" value="@preparation" name="Preparations" /><input type="button" style="width:8.5%; background-color:red; height:38px; border: 1px solid #ced4da; border-radius: 0.25rem;" onclick="RemoveTextBox3(this)" value="-" /></div>
                    </div>
                }
                <div id="divCont2">
                    <div><input type="text" style="width:90%" name="Preparations" /><input type="button" style="width:8.5%; background-color:green; height:38px; border: 1px solid #ced4da; border-radius: 0.25rem;" onclick="AddTextBox()" value="+" /></div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <div class="mb-3">
                    <input class="form-control" asp-for="Photo" id="formFile" height="100" width="250">
                </div>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
