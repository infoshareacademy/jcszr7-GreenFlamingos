@model IEnumerable<GreenFlamingosWebApp.Models.Drink>
@{
    Layout = "~/Views/Shared/_LayoutOLD.cshtml";
    ViewData["Title"] = "Drinki";
}

<div class="container">
    <h3 class="display-4">Wszystkie Drinki</h3>
    <div class="row">
        @foreach(var drink in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                 <img src = "@drink.ImageUrl" class="img-thumbnail" width="100%" height="100%"/>
                        <div class="card-body">
                            <h3 class="card-title">@Html.DisplayFor(modelItem => drink.Name)</h3>
                            <p class="card-text">@Html.DisplayFor(modelItem => drink.DrinkType)</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        @Html.ActionLink("Details", "Details", new {  id=drink.Id })
                                    </div>
                                    <small class="text-muted">Autor Drinka</small>
                                </div>
                        </div>
                </div>
            </div>  
        }
    </div>
</div>
